@model SM.Application.ViewModels.UsuarioUsuarioImagemViewModel

@{
    ViewBag.Title = "Editar";
}

@section Header {
    <style>
        #imgInp {
            display: none;
        }

        .form-horizontal .control-label {
            text-align: left;
        }
    </style>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Idf_Usuario)

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row vert-offset-top-1">
            <div class="col-md-12">
                <div class="col-md-2">
                    <h2 class="col-md-12">@ViewBag.Title</h2>
                </div>
                <div class="col-md-2" style="align-content:center">
                    <div class="col-md-12">
                        <label for="imgInp" style="max-width:100px; ">
                            <img id='img-upload' src="~/Images/Avatar_Perfil_Usuario.gif" alt="Imagem_Avatar_Usuario" class="img-circle img-thumbnail ">

                        </label>
                        <input type="file" id="imgInp" accept="image/*">
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group vert-offset-top-2">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-5">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Nme_Usuario, htmlAttributes: new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Nme_Usuario, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nme_Usuario, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Num_Cpf, htmlAttributes: new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Num_Cpf, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Num_Cpf, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Eml_Usuario, htmlAttributes: new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Eml_Usuario, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Eml_Usuario, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Dta_Nascimento, htmlAttributes: new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Dta_Nascimento, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Dta_Nascimento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Des_Senha, htmlAttributes: new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Des_Senha, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Des_Senha, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Des_Senha_Confirm, htmlAttributes: new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Des_Senha_Confirm, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Des_Senha_Confirm, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @Html.HiddenFor(model => model.Imagem)

        <div class="form-group">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Des_Senha_Hash, htmlAttributes: new { @class = "control-label" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12">
                                @Html.EditorFor(model => model.Des_Senha_Hash, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Des_Senha_Hash, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12 col-md-12">
                <div class="row">
                    <div class="col-xs-6 col-md-4">
                        <div class="row">
                            <div class="col-md-12">
                                <input type="submit" id="btnSave" value="Salvar" class="btn btn-success col-md-12 col-xs-12" />
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-6 col-md-4">
                        <div class="row">
                            <div class="col-md-12">
                                <input type="button" id="btnReturn" value="Voltar" class="btn btn-default col-md-12 col-xs-12" onclick="@("window.location.href='" + @Url.Action("Index", "Usuarios") + "'");" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/Content/Usuarios/js")
    @Scripts.Render("~/bundles/Content/UsuariosEdit/js")

}

<script>
    $(function () {
        usuario.init({
            field: {
                name: "#Nme_Usuario",
                cpf: "#Num_Cpf",
                email: "#Eml_Usuario",
                dataNascimento: "#Dta_Nascimento",
                senha: "#Des_Senha",
                senhaConfirmacao: "#Des_Senha_Confirm",
                imagem: "#Imagem",
                imagemUpload: "#img-upload",
                imagemInput: "#imgInp",
                senhaHash: "#Des_Senha_Hash",
            },
            element: {
                saveButton: "#btnSave",
                returnButton: "#btnReturn",
            },
            postAction: {
                create: "@Url.Action("Edit", "Usuarios")",
            }
        });

        $(document).ready(function () {
            usuario.initializeScreen();
        });
    });
</script>